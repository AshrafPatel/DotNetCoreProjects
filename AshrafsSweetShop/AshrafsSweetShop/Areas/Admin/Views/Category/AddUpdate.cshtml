@model Category

<h1>@ViewBag.Action Category</h1>
<form asp-controller="Category" asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <input type="hidden" asp-for="CategoryId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Go Back</a>
</form>
