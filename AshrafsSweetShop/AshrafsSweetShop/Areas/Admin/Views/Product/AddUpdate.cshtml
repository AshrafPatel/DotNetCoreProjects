@model ProductAddUpdateViewModel
@{ 
    ViewBag.Title = Model.Action + " Product";
}

<h1>@ViewBag.Title</h1>
<form asp-controller="Product" asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Product.CategoryId">Category</label>
        <select asp-for="Product.CategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name", Model.Product.CategoryId.ToString()))" class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Product.Code">Code</label>
        <input asp-for="Product.Code" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Product.Name">Name</label>
        <input asp-for="Product.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Product.Price">Price</label>
        <input asp-for="Product.Price" class="form-control" />
    </div>

    <input type="hidden" asp-for="Product.ProductID" />

    <button type="submit" class="btn btn-primary">@Model.Action</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-danger">Cancel</a>
</form>