@model FutureValue
@{ 
    ViewBag.Title = "Future Value Calculator";
}

<h1>Future Value Calculator</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All">
        <span>Please correct the following errors</span>
    </div>
    <div>
        <label asp-for="MonthlyInvestment">Monthly Investment:</label>
        <input asp-for="MonthlyInvestment" />
    </div>
    <div>
        <label asp-for="YearlyInterestRate">Yearly Investment:</label>
        <input asp-for="YearlyInterestRate" />
    </div>
    <div>
        <label asp-for="NumberOfYears">Number Of Years</label>
        <input asp-for="NumberOfYears"/>
    </div>
    <div>
        <label>Future Value:</label>
        <label>@ViewBag.FutureValue</label>
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
</form>

