@model FutureValue
@{ 
    ViewBag.Title = "Future Value Calculator";
}

<div class="container">
    <header class="jumbotron">
        <h1 class="mt-3">@ViewBag.Title</h1>
    </header>
    <main>
        <div class="alert-success alert alert-dismissible">
            <button class="close" data-dismiss="alert">&times;</button>
            This site is for educational purposes.
        </div>
        <form asp-action="Index" method="post">
            <div class="row">
                <label asp-for="MonthlyInvestment" class="control-label col-3">Monthly Investment:</label>
                <input asp-for="MonthlyInvestment" class="form-control col-3" />
                <span asp-validation-for="@Model.MonthlyInvestment" class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="YearlyInterestRate" class="control-label col-3">Yearly Investment:</label>
                <input asp-for="YearlyInterestRate" class="form-control col-3" />
                <span asp-validation-for="@Model.YearlyInterestRate" class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="NumberOfYears" class="control-label col-3">Number Of Years</label>
                <input asp-for="NumberOfYears" class="form-control col-3" />
                <span asp-validation-for="@Model.NumberOfYears" class="text-danger col"></span>
            </div>
            <div class="row">
                <label class="control-label col-3">Future Value:</label>
                <input value="@ViewBag.FutureValue" class="form-control col-3" readonly />
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary">Calculate</button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </main>
</div>

