@model Category
@{ 
    ViewBag.Title = "Delete Category";
}

<h1>Confirm Delete</h1>
<h3>Are you sure you want to @Model.Name category?</h3>

<form asp-controller="Category" asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Cancel</a>
</form>
