@model TodoViewModel

<h2>New Task</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="CurrentTask.Description">Description:</label>
        <input type="text" asp-for="CurrentTask.Description" class="form-control" />
        <span asp-validation-for="CurrentTask.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentTask.CategoryId">Category:</label>
        <select asp-for="CurrentTask.CategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))" class="form-control">
            <option value=""></option>
        </select>
        <span asp-validation-for="CurrentTask.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentTask.DueDate">Due Date:</label>
        <input type="date" asp-for="CurrentTask.DueDate" value="@DateTime.Now" class="form-control" />
        <span asp-validation-for="CurrentTask.DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentTask.StatusId">Status:</label>
        <select asp-for="CurrentTask.StatusId" asp-items="@(new SelectList(Model.Statuses, "StatusId", "Name"))" class="form-control">
            <option value=""></option>
        </select>
        <span asp-validation-for="CurrentTask.StatusId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
</form>