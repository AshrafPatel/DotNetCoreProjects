@@model Candy

<h1>@Model.Name</h1>

<div class="thumbnail">
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <div class="caption-full">
        <h2 class="pull-right">@Model.Price</h2>
        <h3><a href="#">@Model.Name</a></h3>
        <p>@Model.Description</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-candyId="@Model.CandyId">Add To Cart</a>
        </p>
    </div>
</div>